<h1>Create a Power</h1>
<ol>
  <% if flash[:error_messages] %>
    <% flash[:error_messages].each do |err| %>
      <li> <%= err %> </li>
    <% end %>
  <% end %>
</ol>

<%= form_for @power do |f| %>
<%= f.label :name %>
<%= f.text_field :name  %> <br>
<%= f.label :description %>
<%= f.text_area :description %> <br>
<%= f.submit %>
<% end %>
