<h1>Create a Heroine</h1>

<ol>
<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <li><%= error %></li>
    <% end %>
  <% end %>
</ol>

<%= form_for @heroine do |f| %>


  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :super_name %>
  <%= f.text_field :super_name %>

  <%= f.label :power %>
  <%= f.collection_select :power_id, @powers, :id, :name, prompt: true %>


  <%= f.submit %>
<% end %>
