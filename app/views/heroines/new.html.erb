<h1>CREATE A HEROINE</h1>

<% if @errors %>
<%= pluralize(@errors.length, "Error") %>:
<% @errors.each do |error_message| %>
  <%= error_message %><br>
  <% end %>
<% end %>

<%= form_for @heroine do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.label :super_name %><br>
  <%= f.text_field :super_name %><br>
  <%= f.label :power %><br>
  <%= f.collection_select(:power_id, @powers, :id, :name) %><br>
  <%= f.submit %><br>
<% end %>

<%= link_to "Create a New Heroine!", new_heroine_path%>
