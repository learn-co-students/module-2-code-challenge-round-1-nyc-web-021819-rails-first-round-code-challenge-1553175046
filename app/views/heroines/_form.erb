

<% if @errors %>
<h3>Please resolve the following errors: </h3>
<ol>
<% @errors.each do |error| %>
<li><%= error %></li>
<% end %>
<% end %>
</ol>

<%= form_for @heroine do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br>
<%= f.label :super_name %>
<%= f.text_field :super_name %><br>
<%= f.label :power_name %>
<%= f.collection_select :power_id, @powers, :id, :name%> <br>
<%= f.submit %>
<% end %>
