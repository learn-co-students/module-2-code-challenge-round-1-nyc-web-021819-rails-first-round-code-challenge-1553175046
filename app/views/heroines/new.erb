<h1>New Heroine</h1>

  <ul>
    <% if flash[:no_unique] %>
      <% flash[:no_unique].each do |error| %>
        <li><%= error %></li>
      <% end %>
    <% end %>
  </ul>


<%= form_for @heroine do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :super_name %>
  <%= f.text_field :super_name %><br>
  <%= f.label :power_id %>
  <%= f.collection_select(:power_id, @powers, :id, :name, prompt: true) %><br>
  <%= f.submit %>
<% end %>
