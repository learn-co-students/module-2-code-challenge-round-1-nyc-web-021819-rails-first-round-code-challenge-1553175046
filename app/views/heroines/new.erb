<h1>NEW HERO IS BEING BORN</h1>


<% if flash[:hero_errors]%>
<% flash[:hero_errors].each do |error| %>
<ol><%= error %></ol><br>
<%end%>
<%end%>

 <%= form_for @heroine do |f| %>
   <%= f.label :name %>
   <%= f.text_field :name %><br>
   <%= f.label :super_name %>
   <%= f.text_field :super_name %><br>
   
   <%= f.collection_select :power_id, @powers, :id, :name %>


   <%= f.submit %>
 
<% end %>