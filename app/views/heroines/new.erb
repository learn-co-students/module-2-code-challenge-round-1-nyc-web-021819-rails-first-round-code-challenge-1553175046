<h1>Create new hero</h1>

<ol>
  <% if flash[:errors] %>
    <% flash[:errors].each do |err| %>
        <li><%= err %></li>
    <% end %>
  <% end %>
</ol>

<%= form_for @heroine do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :super_name%>
  <%= f.text_field :super_name %><br>
  <%= f.collection_select(:power_id, Power.all, :id, :name) %>
  <%= f.submit %>

<% end %>
