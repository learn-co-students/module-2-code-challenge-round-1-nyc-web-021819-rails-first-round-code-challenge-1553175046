<ol>
  <% if flash[:heroine_errors] %>
    <% flash[:heroine_errors].each do |error| %>
      <li> <%= error %> </li>
    <% end %>
  <% end %>
</ol>

<%= form_for @heroine do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name%> <br>

  <%= f.label :super_name %>
  <%= f.text_field :super_name%><br>

  <%= f.label :power %>
  <%= f.collection_select(:power_id, @powers, :id, :name, prompt: true) %> <br>

  <%= f.submit %>

<% end %>
