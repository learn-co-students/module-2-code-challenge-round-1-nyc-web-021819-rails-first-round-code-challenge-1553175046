<h1>Edit a Heroine</h1>
<ol>
  <% if flash[:error_messages] %>
    <% flash[:error_messages].each do |err| %>
      <li> <%= err %> </li>
    <% end %>
  <% end %>
</ol>

<%= form_for @heroine do |f| %>
<%= f.label :name %>
<%= f.text_field :name  %> <br>
<%= f.label :super_name %>
<%= f.text_field :super_name %> <br>
<%= f.label :power_id  %>
<%= f.collection_select(:power_id, @powers, :id, :name, prompt: true) %> <br>
<%= f.submit %>
<% end %>
